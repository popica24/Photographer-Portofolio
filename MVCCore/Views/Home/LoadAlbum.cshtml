@using MVCCore.Data;
@model PaginatedList<PhotoModel>


<div class="container">
    <div class="row">
        @foreach (var i in Model)
        {
            if (!i.IsThumbnail)
            {
                <div class="col-md-4 py-2">
                    <img src="@i.DbPath"
                         class="img-fluid shadow"
                         alt="@i.Id" />
                </div>
            }
        }
    </div>
    <div class="d-flex flex-row justify-content-center align-items-center text-center text-white">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <a class="px-2 text-warning">@i</a>
            }
            else
            {
                <a asp-action="LoadAlbum" asp-controller="Home" asp-route-albumId="@Model[0].AlbumId" asp-route-pageIndex="@i" class=" px-2 text-black">@i</a>
            }
        }
    </div>
</div>
