@using MVCCore.Models.Enumerations;
@model List<CoverModel>
@{
    <div class="row tile">

        <div class="col">
            <div class="py-3">
                <div class="bg-black slide-left text-md-start text-center">
                    <span class="font-raleway display-6 text-white px-md-5">MY WORK</span>
                </div>
            </div>
            <div class="d-flex flex-column flex-lg-row justify-content-center align-items-center">
                <div class="col-lg-4 col-12">
                    <a asp-controller="Home" asp-action="DisplayAlbums" asp-route-categoryId = "@Category.Wedding">
                        <div class="tl-item">
                            <div class="tl-bg"
                                 style="background-image: url(@Model.FirstOrDefault(x=>x.Category == Category.Wedding).DbPath"></div>
                            <div class="tl-year">
                                <p class="index-hero-text">WEDDING</p>
                            </div>
                        </div>
                    </a>
                </div>
                <hr>
                <div class="col-lg-4 col-12">
                    <a asp-controller="Home" asp-action="DisplayAlbums" asp-route-categoryId="@Category.Christening">
                        <div class="tl-item">
                            <div class="tl-bg"
                                 style="background-image: url(@Model.FirstOrDefault(x=>x.Category == Category.Christening).DbPath"></div>

                            <div class="tl-year">
                                <p class="index-hero-text">CHRISTENING</p>
                            </div>
                        </div>
                    </a>
                </div>
                <hr>
                <div class="col-lg-4 col-12">
                    <a asp-controller="Home" asp-action="DisplayAlbums" asp-route-categoryId="@Category.CivilWedding">
                        <div class="tl-item">
                            <div class="tl-bg"
                                 style="background-image: url(@Model.FirstOrDefault(x=>x.Category == Category.CivilWedding).DbPath"></div>

                            <div class="tl-year">
                                <p class="index-hero-text">CIVIL WEDDING</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

}
