@model List<ReviewModel>
@{
    <div class="row py-3">
        <div class="col-12 tile">
            <div class="py-3">
                <div class="bg-black slide-left text-md-start text-center">
                    <span class="font-raleway display-6 text-white px-md-5">TESTIMONIALS</span>
                </div>
            </div>
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (i == 0)
                        {
                            <button type="button" data-bs-target="#reviewCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>

                        }
                        else
                        {
                            <button type="button" data-bs-target="#reviewCarousel" data-bs-slide-to="@i" aria-current="true"></button>

                        }

                    }

                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count; i++)
                    {

                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="@Model[i].DbPhoto" class="d-block mx-auto img-fluid" alt="..." style="max-height:600px">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@Model[i].DbPhoto" class="d-block mx-auto img-fluid" alt="..." style="max-height:600px">
                            </div>

                        }

                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon-custom-review" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon-custom-review" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
}