@model MVCCore.Models.AlbumModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AlbumModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Album" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <div>
                    <select id="dropdownInput" class="form-control" name="category" required>
                        <option value="" disabled selected>Select a category</option>
                        <option value="Wedding">Wedding</option>
                        <option value="Christening">Christening</option>
                        <option value="CivilWedding">Civil Wedding</option>
                    </select>
                    <div class="invalid-feedback">Please select a category.</div>
                </div>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div>
                @Html.LabelFor(m=>m.Thumbnail,new {@class = "form-label"})
            </div>
            <div>
                <input asp-for="Images" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
